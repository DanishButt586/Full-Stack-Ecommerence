# Example environment variables for the Backend
# Copy this file to `.env` and fill in real values before running in production.

# MongoDB connection string
MONGODB_URI=

# Server
PORT=5000
NODE_ENV=development

# Session & Auth
SESSION_SECRET=
JWT_SECRET=
JWT_EXPIRE=7d

# Admin seed credentials (optional)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Frontend URL for OAuth redirects / CORS
FRONTEND_URL=http://localhost:3000

# Socket.IO allowed origins (comma-separated)
SOCKET_ORIGINS=http://localhost:3000
SOCKET_PING_TIMEOUT=20000
SOCKET_PING_INTERVAL=25000

# Google OAuth (if you use Google login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Stripe (if using payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ecommerce
MONGODB_URI=mongodb://localhost:27017/ecommerce

# JWT & Authentication
JWT_SECRET=your-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
SESSION_SECRET=your-session-secret-change-this-in-production

# Environment
NODE_ENV=development
PORT=5000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Admin User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-admin-password

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logger Level
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
